---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import { getLangFromUrl } from "../i18n/utils";
const lang = getLangFromUrl(Astro.url);

const { title } = Astro.props;
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>ðŸŸ¨</text></svg>"
    />

    <!-- Add Meta tags -->
    <meta
      name="description"
      content="Knut Rothe ist ein freiberuflicher Medien-Informatiker in Jena"
    />
    <meta name="author" content="Knut Rothe" />
    <meta
      name="keywords"
      content="Knut, Knut Rothe, Knut Casper Rothe, Rothe, Casper, Web-dev, Red, Knutred, Knut Red, red knut, knut.red, red.knut, redknut"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- Add Open Graph tags -->
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content="/og_knutred.png" />
    <meta
      property="og:description"
      content="Knut Rothe ist ein freiberuflicher Medien-Informatiker in Jena"
    />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@knutred" />
    <meta name="twitter:creator" content="@knutred" />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content="Knut Rothe ist ein freiberuflicher Medien-Informatiker in Jena"
    />
    <meta name="twitter:image" content="/og_knutred.png" />

    <title>{title}</title>
  </head>
  <body class="flex h-dvh justify-center">
    <Header />

    <main class="my-auto p-5">
      <slot />
    </main>

    <Footer />
  </body>
</html>
